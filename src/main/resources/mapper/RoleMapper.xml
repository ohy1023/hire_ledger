<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hireledger.mapper.RoleMapper">
    <select id="findByRoleName" parameterType="string" resultType="com.example.hireledger.domain.entity.Role">
        SELECT *
        FROM role r
        WHERE r.role_type = #{roleName}
    </select>

    <select id="findRolesByIds" resultType="com.example.hireledger.domain.entity.Role">
        SELECT *
        FROM role
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>